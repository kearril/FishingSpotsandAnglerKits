<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <Operation Class="PatchOperationConditional">
    <xpath>Defs/TerrainDef[(bridge="true" or @ParentName="BridgeBase") and affordances and not(affordances/li[text()="Walkable"])]</xpath>
    <match Class="PatchOperationAdd">
      <xpath>Defs/TerrainDef[(bridge="true" or @ParentName="BridgeBase")]/affordances</xpath>
      <value>
        <li>Walkable</li>
      </value>
    </match>
  </Operation>

</Patch>
